{{#if isValid}}
<div>
     <!-- Para verificar la acciÃ³n del formulario -->
    {{#each docs}}
    <div>
        <h2>{{this.title}}</h2>
        <p>Description: {{this.description}}</p>
        <p>Price: ${{this.price}}</p>
        <p>Stock: {{this.stock}}</p>
        <p>Categoria: {{this.category}}</p>
        <form action="api/cart/{{../cartId}}/product/{{this._id}}" method="POST">
            <button type="submit">Agregar al carrito</button>
        </form>      
    </div>
    <br>
    {{/each}}
</div>
<div>
    {{#if hasPrevPage}}
    <a href={{this.prevLink}}>
        << Anterior </a>
            {{/if}}

            {{!-- numero de pagina --}}
            &nbsp;
            {{this.page}}
            &nbsp;

            {{#if hasNextPage}}
            <a href={{this.nextLink}}>
                Siguiente >> </a>
            {{/if}}

</div>
{{else}}
<h1>No hay productos para mostrar</h1>
{{/if}}